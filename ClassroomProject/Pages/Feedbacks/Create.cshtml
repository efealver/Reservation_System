@page
@model ClassroomProject.Pages_Feedbacks.CreateModel

        @{
        ViewData["Title"] = "Create";
        }
        
        <h1>Create</h1>
        
    <h4>Feedback</h4>
    <hr />
    <div class="row">
    <div class="col-md-4">
    <form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="FeedbackVM.ClassroomId" class="control-label"></label>
                <select asp-for="FeedbackVM.ClassroomId" class ="form-control" asp-items="ViewBag.ClassroomId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FeedbackVM.Rating" class="control-label"></label>
                <input asp-for="FeedbackVM.Rating" class="form-control"min="1" max="5" />
                <span asp-validation-for="FeedbackVM.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Email Us</label>
                <input asp-for="FeedbackVM.Comment" class="form-control" style="width:1200px;" />
                <span asp-validation-for="FeedbackVM.Comment" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

